        <activity android:name=".Activities.MainLed" />
        <activity android:name=".Activities.MainLedBedroomClose" />
        <activity android:name=".Activities.MainLedBedroomOpen" />
        <activity android:name=".Activities.MainLedKitchenClose" />
        <activity android:name=".Activities.MainLedKitchenOpen" />
        <activity android:name=".Activities.MainLedLivingRoomClose" />
        <activity android:name=".Activities.MainLedLivingRoomOpen" />
        <activity android:name=".Activities.MainLock" />
        <activity android:name=".Activities.MainLockClose" />
        <activity android:name=".Activities.MainLockOpen" />
        <activity android:name=".Activities.MainView" />
        <activity android:name=".Activities.BackgroundWorker"></activity>
    </application>

</manifest>